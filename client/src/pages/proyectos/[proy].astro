---
// src/pages/proyectos/[proy].astro
import Layout from '../../layouts/Layout.astro';
import { t } from "../../i18n/index.js";
import proyectosData from "../../data/proyectos.json";

export async function getStaticPaths() {
    const proyectos = proyectosData.proyectos;
    
    return proyectos.map((proyecto) => ({
        params: { 
            proy: proyecto.enlace.replace('/proyectos/', '') 
        },
        props: {
            proyecto
        }
    }));
}

const { proyecto } = Astro.props;
const initialLang =
    typeof window !== "undefined"
        ? localStorage.getItem("preferredLang") || "es"
        : "es";

// Función para obtener el título del proyecto en el idioma actual
function getProjectTitle(proyecto, lang) {
    return typeof proyecto.titulo === 'object' ? proyecto.titulo[lang] : proyecto.titulo;
}

// Función para obtener la descripción en el idioma actual
function getProjectDescription(proyecto, lang) {
    return typeof proyecto.descripcion_larga === 'object' ? proyecto.descripcion_larga[lang] : proyecto.descripcion_larga;
}

// Función para obtener las características en el idioma actual
function getProjectFeatures(proyecto, lang) {
    return typeof proyecto.caracteristicas === 'object' ? proyecto.caracteristicas[lang] : proyecto.caracteristicas;
}

const pageTitle = getProjectTitle(proyecto, initialLang);
const pageDescription = proyecto.descripcion_corta[initialLang];
const canonicalUrl = `https://jorgepena.dev${proyecto.enlace}`;
---

<Layout 
    title={pageTitle}
    description={pageDescription}
    canonicalUrl={canonicalUrl}
>
    <!-- Hero Section del Proyecto -->
    <section class="relative py-20 pt-32">
        <div class="max-w-6xl mx-auto px-4">
            <!-- Breadcrumb -->
            <nav class="flex items-center gap-2 text-sm text-gray-400 mb-8">
                <a href="/" class="hover:text-[#E64530] transition-colors" data-i18n="breadcrumb.home">Inicio</a>
                <span>/</span>
                <a href="/#projects" class="hover:text-[#E64530] transition-colors" data-i18n="breadcrumb.projects">Proyectos</a>
                <span>/</span>
                <span class="text-white">{getProjectTitle(proyecto, initialLang)}</span>
            </nav>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <!-- Información del Proyecto -->
                <div class="space-y-6">
                    <!-- Badges -->
                    <div class="flex flex-wrap gap-3">
                        <span class="bg-[#E64530] text-white px-4 py-2 rounded-full text-sm font-medium">
                            {proyecto.categoria[initialLang]}
                        </span>
                        <span class={`px-4 py-2 rounded-full text-sm font-medium ${
                            proyecto.estado.es === 'Completado' 
                                ? 'bg-green-500/20 text-green-400 border border-green-500/30' 
                                : 'bg-yellow-500/20 text-yellow-400 border border-yellow-500/30'
                        }`}>
                            {proyecto.estado[initialLang]}
                        </span>
                        {proyecto.destacado && (
                            <span class="bg-purple-500/20 text-purple-400 px-4 py-2 rounded-full text-sm font-medium border border-purple-500/30">
                                {t(initialLang, "projects.featured")}
                            </span>
                        )}
                    </div>

                    <!-- Título -->
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold">
                        {getProjectTitle(proyecto, initialLang)}
                    </h1>

                    <!-- Descripción Corta -->
                    <p class="text-xl text-gray-300 leading-relaxed">
                        {proyecto.descripcion_corta[initialLang]}
                    </p>

                    <!-- Fecha -->
                    <div class="flex items-center gap-2 text-gray-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <span>{proyecto.fecha}</span>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="flex flex-wrap gap-4 pt-4">
                        <button onclick="window.history.back()" 
                                class="flex items-center gap-2 bg-gray-700 hover:bg-gray-600 text-white px-6 py-3 rounded-lg transition-all duration-300 transform hover:scale-105">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                            </svg>
                            <span data-i18n="project.back">Volver a Proyectos</span>
                        </button>
                        
                        <!-- Botón de Demo (puedes personalizar la URL) -->
                        <button onclick="window.open('https://demo-url.com', '_blank')" 
                                class="flex items-center gap-2 bg-[#E64530] hover:bg-[#d63c28] text-white px-6 py-3 rounded-lg transition-all duration-300 transform hover:scale-105">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                            </svg>
                            <span data-i18n="project.live_demo">Ver Demo</span>
                        </button>
                    </div>
                </div>

                <!-- Imagen del Proyecto -->
                <div class="relative">
                    <div class={`w-32 h-32 ${proyecto.color} rounded-3xl flex items-center justify-center text-5xl mb-6 mx-auto lg:mx-0`}>
                        {proyecto.icono}
                    </div>
                    <img 
                        src={proyecto.imagen} 
                        alt={getProjectTitle(proyecto, initialLang)}
                        class="w-full rounded-2xl shadow-2xl border border-gray-700 hover:border-[#E64530] transition-all duration-300 project-image"
                        loading="eager"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Detalles del Proyecto -->
    <section class="py-20 bg-gray-800/20">
        <div class="max-w-6xl mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <!-- Descripción Larga y Características -->
                <div class="lg:col-span-2 space-y-12">
                    <!-- Descripción Larga -->
                    <div class="bg-gray-800/40 rounded-2xl p-8 backdrop-blur-sm border border-gray-700 project-card">
                        <h2 class="text-2xl font-bold text-white mb-6" data-i18n="project.description">Descripción del Proyecto</h2>
                        <p class="text-gray-300 leading-relaxed text-lg">
                            {getProjectDescription(proyecto, initialLang)}
                        </p>
                    </div>

                    <!-- Características Principales -->
                    <div class="bg-gray-800/40 rounded-2xl p-8 backdrop-blur-sm border border-gray-700 project-card">
                        <h2 class="text-2xl font-bold text-white mb-6" data-i18n="project.features">Características Principales</h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {getProjectFeatures(proyecto, initialLang).map((caracteristica, index) => (
                                <div key={index} class="flex items-center gap-3 p-3 bg-gray-700/30 rounded-lg hover:bg-gray-700/50 transition-all duration-300">
                                    <div class="w-8 h-8 bg-[#E64530] rounded-lg flex items-center justify-center">
                                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                    </div>
                                    <span class="text-gray-300">{caracteristica}</span>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>

                <!-- Información Técnica -->
                <div class="space-y-8">
                    <!-- Tecnologías Utilizadas -->
                    <div class="bg-gray-800/40 rounded-2xl p-6 backdrop-blur-sm border border-gray-700 project-card">
                        <h3 class="text-xl font-bold text-white mb-4" data-i18n="project.technologies">Tecnologías Utilizadas</h3>
                        <div class="flex flex-wrap gap-2">
                            {proyecto.tecnologias.map((tech, index) => (
                                <span key={index} 
                                      class="bg-gray-700/50 text-gray-300 px-3 py-2 rounded-lg text-sm border border-gray-600 hover:border-[#E64530] transition-all duration-300">
                                    {tech}
                                </span>
                            ))}
                        </div>
                    </div>

                    <!-- Detalles del Proyecto -->
                    <div class="bg-gray-800/40 rounded-2xl p-6 backdrop-blur-sm border border-gray-700 project-card">
                        <h3 class="text-xl font-bold text-white mb-4" data-i18n="project.details">Detalles del Proyecto</h3>
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400" data-i18n="project.category">Categoría</span>
                                <span class="text-white font-medium">{proyecto.categoria[initialLang]}</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400" data-i18n="project.status">Estado</span>
                                <span class={`font-medium ${
                                    proyecto.estado.es === 'Completado' 
                                        ? 'text-green-400' 
                                        : 'text-yellow-400'
                                }`}>
                                    {proyecto.estado[initialLang]}
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400" data-i18n="project.date">Fecha</span>
                                <span class="text-white font-medium">{proyecto.fecha}</span>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="bg-gray-800/40 rounded-2xl p-6 backdrop-blur-sm border border-gray-700 project-card">
                        <h3 class="text-xl font-bold text-white mb-4" data-i18n="project.actions">Acciones</h3>
                        <div class="space-y-3">
                            <button onclick="window.open('https://demo-url.com', '_blank')" 
                                    class="w-full bg-[#E64530] hover:bg-[#d63c28] text-white py-3 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 font-medium">
                                <span data-i18n="project.view_demo">Ver Demo en Vivo</span>
                            </button>
                            <button onclick="window.open('https://github.com/tuusuario/repo', '_blank')" 
                                    class="w-full bg-gray-700 hover:bg-gray-600 text-white py-3 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 font-medium">
                                <span data-i18n="project.view_code">Ver Código Fuente</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Navegación entre Proyectos -->
    <section class="py-20">
        <div class="max-w-6xl mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12" data-i18n="project.more_projects">Más Proyectos</h2>
            <div class="flex justify-center">
                <a href="/#projects" 
                   class="flex items-center gap-2 bg-gray-700 hover:bg-gray-600 text-white px-6 py-3 rounded-lg transition-all duration-300 transform hover:scale-105">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                    <span data-i18n="project.all_projects">Ver Todos los Proyectos</span>
                </a>
            </div>
        </div>
    </section>

    <script>
        // Internacionalización específica de la página de proyecto
        function updateProjectTexts(lang) {
            const elements = document.querySelectorAll('[data-i18n]');
            const translations = {
                'es': {
                    'breadcrumb.home': 'Inicio',
                    'breadcrumb.projects': 'Proyectos',
                    'projects.featured': 'Destacado',
                    'project.back': 'Volver a Proyectos',
                    'project.live_demo': 'Ver Demo',
                    'project.description': 'Descripción del Proyecto',
                    'project.features': 'Características Principales',
                    'project.technologies': 'Tecnologías Utilizadas',
                    'project.details': 'Detalles del Proyecto',
                    'project.category': 'Categoría',
                    'project.status': 'Estado',
                    'project.date': 'Fecha',
                    'project.actions': 'Acciones',
                    'project.view_demo': 'Ver Demo en Vivo',
                    'project.view_code': 'Ver Código Fuente',
                    'project.more_projects': 'Más Proyectos',
                    'project.all_projects': 'Ver Todos los Proyectos'
                },
                'en': {
                    'breadcrumb.home': 'Home',
                    'breadcrumb.projects': 'Projects',
                    'projects.featured': 'Featured',
                    'project.back': 'Back to Projects',
                    'project.live_demo': 'View Demo',
                    'project.description': 'Project Description',
                    'project.features': 'Key Features',
                    'project.technologies': 'Technologies Used',
                    'project.details': 'Project Details',
                    'project.category': 'Category',
                    'project.status': 'Status',
                    'project.date': 'Date',
                    'project.actions': 'Actions',
                    'project.view_demo': 'View Live Demo',
                    'project.view_code': 'View Source Code',
                    'project.more_projects': 'More Projects',
                    'project.all_projects': 'View All Projects'
                },
                'zh': {
                    'breadcrumb.home': '首页',
                    'breadcrumb.projects': '项目',
                    'projects.featured': '精选',
                    'project.back': '返回项目',
                    'project.live_demo': '查看演示',
                    'project.description': '项目描述',
                    'project.features': '主要特点',
                    'project.technologies': '使用的技术',
                    'project.details': '项目详情',
                    'project.category': '分类',
                    'project.status': '状态',
                    'project.date': '日期',
                    'project.actions': '操作',
                    'project.view_demo': '查看在线演示',
                    'project.view_code': '查看源代码',
                    'project.more_projects': '更多项目',
                    'project.all_projects': '查看所有项目'
                }
            };
            
            elements.forEach(element => {
                const key = element.getAttribute('data-i18n');
                if (translations[lang] && translations[lang][key]) {
                    element.textContent = translations[lang][key];
                }
            });
        }

        // Registrar la función globalmente
        window.updateProjectTexts = updateProjectTexts;

        // Inicializar cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', function() {
            const currentLang = localStorage.getItem('preferredLang') || 'es';
            updateProjectTexts(currentLang);
        });
    </script>

    <style>
        /* Animaciones específicas para la página del proyecto */
        .project-image {
            transition: all 0.3s ease;
        }
        
        .project-image:hover {
            transform: scale(1.02);
        }
        
        /* Efectos para las tarjetas */
        .project-card {
            transition: all 0.3s ease;
        }
        
        .project-card:hover {
            transform: translateY(-5px);
        }

        /* Ajustes de espaciado para el layout con navbar fijo */
        @media (min-width: 1024px) {
            section:first-of-type {
                padding-top: 8rem;
            }
        }
    </style>
</Layout>