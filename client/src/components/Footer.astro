</footer>

<script is:inline>
    // Internationalization for footer section
    function updateFooterTexts(lang) {
        const elements = document.querySelectorAll('[data-i18n]');
        const translations = {
            'es': {
                'footer': '© 2025 Jorge Peña - Todos los derechos reservados.',
                'footer.description': 'Desarrollador Full Stack especializado en crear soluciones innovadoras en la intersección del software y hardware.',
                'footer.quick_links': 'Enlaces Rápidos',
                'footer.services': 'Servicios',
                'footer.service_web': 'Desarrollo Web',
                'footer.service_ai': 'Desarrollo de IA',
                'footer.service_hardware': 'Desarrollo de Hardware',
                'footer.service_fullstack': 'Desarrollo Full Stack',
                'footer.service_consulting': 'Consultoría Tecnológica',
                'footer.privacy': 'Política de Privacidad',
                'footer.terms': 'Términos de Servicio',
                'footer.back_to_top': 'Volver Arriba',
                'navbar.home': 'Inicio',
                'navbar.about': 'Acerca de',
                'navbar.skills': 'Habilidades',
                'navbar.projects': 'Proyectos',
                'navbar.contact': 'Contacto'
            },
            'en': {
                'footer': '© 2025 Jorge Peña - All rights reserved.',
                'footer.description': 'Full Stack Developer specialized in creating innovative solutions at the intersection of software and hardware.',
                'footer.quick_links': 'Quick Links',
                'footer.services': 'Services',
                'footer.service_web': 'Web Development',
                'footer.service_ai': 'AI Development',
                'footer.service_hardware': 'Hardware Development',
                'footer.service_fullstack': 'Full Stack Development',
                'footer.service_consulting': 'Tech Consulting',
                'footer.privacy': 'Privacy Policy',
                'footer.terms': 'Terms of Service',
                'footer.back_to_top': 'Back to Top',
                'navbar.home': 'Home',
                'navbar.about': 'About',
                'navbar.skills': 'Skills',
                'navbar.projects': 'Projects',
                'navbar.contact': 'Contact'
            },
            'zh': {
                'footer': '© 2025 Jorge Peña - 版权所有',
                'footer.description': '全栈开发人员，专注于在软件和硬件的交叉点创造创新解决方案。',
                'footer.quick_links': '快速链接',
                'footer.services': '服务',
                'footer.service_web': '网站开发',
                'footer.service_ai': '人工智能开发',
                'footer.service_hardware': '硬件开发',
                'footer.service_fullstack': '全栈开发',
                'footer.service_consulting': '技术咨询',
                'footer.privacy': '隐私政策',
                'footer.terms': '服务条款',
                'footer.back_to_top': '返回顶部',
                'navbar.home': '首页',
                'navbar.about': '关于',
                'navbar.skills': '技能',
                'navbar.projects': '项目',
                'navbar.contact': '联系'
            }
        };
        
        elements.forEach(element => {
            const key = element.getAttribute('data-i18n');
            if (translations[lang] && translations[lang][key]) {
                element.textContent = translations[lang][key];
            }
        });
    }

    // Initialize when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
        const currentLang = localStorage.getItem('preferredLang') || 'es';
        updateFooterTexts(currentLang);
        
        // Botón Volver Arriba
        const backToTopBtn = document.getElementById('back-to-top');
        if (backToTopBtn) {
            backToTopBtn.addEventListener('click', function() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });

            // Mostrar/ocultar botón al hacer scroll
            window.addEventListener('scroll', function() {
                if (window.scrollY > 300) {
                    backToTopBtn.classList.remove('opacity-0', 'invisible');
                    backToTopBtn.classList.add('opacity-100', 'visible');
                } else {
                    backToTopBtn.classList.remove('opacity-100', 'visible');
                    backToTopBtn.classList.add('opacity-0', 'invisible');
                }
            });
        }
    });
    
    // Listen for language changes
    window.addEventListener('languageChanged', (e) => {
        updateFooterTexts(e.detail.language);
    });
</script>

<style>
    /* Animaciones suaves para el footer */
    #back-to-top {
        transition: all 0.3s ease;
        opacity: 0;
        visibility: hidden;
    }
    
    #back-to-top.visible {
        opacity: 1;
        visibility: visible;
    }
    
    /* Efectos hover para enlaces */
    footer a {
        transition: color 0.3s ease;
    }
    
    /* Efectos para iconos sociales */
    .social-icon {
        transition: all 0.3s ease;
    }
    
    .social-icon:hover {
        transform: translateY(-2px);
    }
</style>