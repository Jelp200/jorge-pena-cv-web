---
// src/components/Contact.astro
import { t } from "../i18n/index.js";

const initialLang =
    typeof window !== "undefined"
        ? localStorage.getItem("preferredLang") || "es"
        : "es";
---

<section id="contact" class="py-20 bg-black text-white">
    <div class="max-w-6xl mx-auto px-4">
        <!-- Header -->
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-4" data-i18n="contact.get_in_touch">
                {t(initialLang, "contact.get_in_touch")}
            </h2>
            <p class="text-xl text-gray-500 max-w-2xl mx-auto" data-i18n="contact.name">
                {t(initialLang, "contact.name")}
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Información de Contacto -->
            <div class="space-y-8">
                <!-- Información Personal -->
                <div class="bg-gray-800/40 rounded-2xl p-8 backdrop-blur-sm border border-gray-700">
                    <h3 class="text-2xl font-bold text-white mb-6" data-i18n="contact.info_title">
                        Información de Contacto
                    </h3>
                    
                    <div class="space-y-4">
                        <!-- Email -->
                        <div class="flex items-center gap-4 p-4 bg-gray-700/30 rounded-xl hover:bg-gray-700/50 transition-all duration-300">
                            <div class="w-12 h-12 bg-[#E64530] rounded-xl flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-gray-500 text-sm" data-i18n="contact.email_label">Email</p>
                                <p class="text-white font-medium" data-i18n="contact.email">{t(initialLang, "contact.email")}</p>
                            </div>
                        </div>

                        <!-- Teléfono -->
                        <div class="flex items-center gap-4 p-4 bg-gray-700/30 rounded-xl hover:bg-gray-700/50 transition-all duration-300">
                            <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-gray-500 text-sm" data-i18n="contact.phone_label">Teléfono</p>
                                <p class="text-white font-medium">+52 33 2168 0721</p>
                            </div>
                        </div>

                        <!-- Ubicación -->
                        <div class="flex items-center gap-4 p-4 bg-gray-700/30 rounded-xl hover:bg-gray-700/50 transition-all duration-300">
                            <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-gray-500 text-sm" data-i18n="contact.location_label">Ubicación</p>
                                <p class="text-white font-medium" data-i18n="contact.location">Cd. Nezahualcoyotl, México, México</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botones de Redes Sociales -->
                <div class="bg-gray-800/40 rounded-2xl p-8 backdrop-blur-sm border border-gray-700">
                    <h3 class="text-2xl font-bold text-white mb-6" data-i18n="contact.connect_title">Conéctate Conmigo</h3>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <!-- GitHub -->
                        <a href="https://github.com/Jelp200" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="flex items-center gap-3 p-4 bg-gray-700/30 rounded-xl hover:bg-gray-700/50 transition-all duration-300 group">
                            <div class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                </svg>
                            </div>
                            <span class="text-white font-medium">GitHub</span>
                        </a>

                        <!-- LinkedIn -->
                        <a href="https://www.linkedin.com/in/jorge-pe%C3%B1a-2748001a8/" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="flex items-center gap-3 p-4 bg-gray-700/30 rounded-xl hover:bg-gray-700/50 transition-all duration-300 group">
                            <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                </svg>
                            </div>
                            <span class="text-white font-medium">LinkedIn</span>
                        </a>

                        <!-- Email -->
                        <a href="mailto:jorge.pena0516@gmail.com"
                           class="flex items-center gap-3 p-4 bg-gray-700/30 rounded-xl hover:bg-gray-700/50 transition-all duration-300 group">
                            <div class="w-10 h-10 bg-[#E64530] rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <span class="text-white font-medium">Email</span>
                        </a>

                        <!-- WhatsApp -->
                        <a href="https://wa.me/523321680721" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="flex items-center gap-3 p-4 bg-gray-700/30 rounded-xl hover:bg-gray-700/50 transition-all duration-300 group">
                            <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893-.001-3.189-1.262-6.187-3.55-8.436"/>
                                </svg>
                            </div>
                            <span class="text-white font-medium">WhatsApp</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Formulario de Contacto -->
            <div class="bg-gray-800/40 rounded-2xl p-8 backdrop-blur-sm border border-gray-700">
                <h3 class="text-2xl font-bold text-white mb-6" data-i18n="contact.form_title">Envíame un Mensaje</h3>
                
                <form class="space-y-6">
                    <!-- Nombre -->
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-300 mb-2" data-i18n="contact.name_label">
                            Nombre Completo
                        </label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name"
                            class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-[#E64530] focus:ring-1 focus:ring-[#E64530] transition-all duration-300"
                            placeholder="Tu nombre"
                            data-i18n-placeholder="contact.name_placeholder"
                            required
                        >
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-300 mb-2" data-i18n="contact.email_label_form">
                            Email
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email"
                            class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-[#E64530] focus:ring-1 focus:ring-[#E64530] transition-all duration-300"
                            placeholder="tu@email.com"
                            data-i18n-placeholder="contact.email_placeholder"
                            required
                        >
                    </div>

                    <!-- Mensaje -->
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-300 mb-2" data-i18n="contact.message">
                            {t(initialLang, "contact.message")}
                        </label>
                        <textarea 
                            id="message" 
                            name="message"
                            rows="6"
                            class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-[#E64530] focus:ring-1 focus:ring-[#E64530] transition-all duration-300 resize-none"
                            placeholder="Escribe tu mensaje aquí..."
                            data-i18n-placeholder="contact.message_placeholder"
                            required
                        ></textarea>
                    </div>

                    <!-- Botón Enviar -->
                    <button 
                        type="submit"
                        class="w-full bg-[#E64530] hover:bg-[#d63c28] text-white py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105 font-medium"
                        data-i18n="contact.send"
                    >
                        {t(initialLang, "contact.send")}
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<script is:inline>
    // Internationalization for contact section
    function updateContactTexts(lang) {
        const elements = document.querySelectorAll('[data-i18n]');
        const translations = {
            'es': {
                'contact.get_in_touch': 'Ponte en contacto',
                'contact.name': 'Ing. Jorge E. Peña Paz',
                'contact.email': 'jorge.pena0516@gmail.com',
                'contact.message': 'Tu mensaje',
                'contact.send': 'Enviar',
                'contact.info_title': 'Información de Contacto',
                'contact.email_label': 'Email',
                'contact.phone_label': 'Teléfono',
                'contact.location_label': 'Ubicación',
                'contact.location': 'Cd. Nezahualcoyotl, México, México',
                'contact.connect_title': 'Conéctate Conmigo',
                'contact.form_title': 'Envíame un Mensaje',
                'contact.name_label': 'Nombre Completo',
                'contact.name_placeholder': 'Tu nombre',
                'contact.email_label_form': 'Email',
                'contact.email_placeholder': 'tu@email.com',
                'contact.message_placeholder': 'Escribe tu mensaje aquí...'
            },
            'en': {
                'contact.get_in_touch': 'Get in Touch',
                'contact.name': 'Eng. Jorge E. Peña Paz',
                'contact.email': 'jorge.pena0516@gmail.com',
                'contact.message': 'Your message',
                'contact.send': 'Send',
                'contact.info_title': 'Contact Information',
                'contact.email_label': 'Email',
                'contact.phone_label': 'Phone',
                'contact.location_label': 'Location',
                'contact.location': 'Cd. Nezahualcoyotl, México, México',
                'contact.connect_title': 'Connect With Me',
                'contact.form_title': 'Send Me a Message',
                'contact.name_label': 'Full Name',
                'contact.name_placeholder': 'Your name',
                'contact.email_label_form': 'Email',
                'contact.email_placeholder': 'your@email.com',
                'contact.message_placeholder': 'Write your message here...'
            },
            'zh': {
                'contact.get_in_touch': '联系我',
                'contact.name': '工程师 Jorge E. Peña Paz',
                'contact.email': 'jorge.pena0516@gmail.com',
                'contact.message': '你的信息',
                'contact.send': '发送',
                'contact.info_title': '联系信息',
                'contact.email_label': '电子邮件',
                'contact.phone_label': '电话',
                'contact.location_label': '位置',
                'contact.location': '墨西哥墨西哥州内萨瓦尔科约特尔市',
                'contact.connect_title': '与我联系',
                'contact.form_title': '发送消息',
                'contact.name_label': '全名',
                'contact.name_placeholder': '你的名字',
                'contact.email_label_form': '电子邮件',
                'contact.email_placeholder': '你的@邮箱.com',
                'contact.message_placeholder': '在这里写下你的消息...'
            }
        };
        
        elements.forEach(element => {
            const key = element.getAttribute('data-i18n');
            if (translations[lang] && translations[lang][key]) {
                element.textContent = translations[lang][key];
            }
        });

        // Actualizar placeholders
        const placeholderElements = document.querySelectorAll('[data-i18n-placeholder]');
        placeholderElements.forEach(element => {
            const key = element.getAttribute('data-i18n-placeholder');
            if (translations[lang] && translations[lang][key]) {
                element.setAttribute('placeholder', translations[lang][key]);
            }
        });
    }

    // Initialize when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
        const currentLang = localStorage.getItem('preferredLang') || 'es';
        updateContactTexts(currentLang);
    });
    
    // Listen for language changes
    window.addEventListener('languageChanged', (e) => {
        updateContactTexts(e.detail.language);
    });

    // Form submission handling
    document.addEventListener('DOMContentLoaded', function() {
        const contactForm = document.querySelector('form');
        if (contactForm) {
            contactForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const submitBtn = contactForm.querySelector('button[type="submit"]');
                const originalText = submitBtn.textContent;
                
                submitBtn.textContent = getSendingText();
                submitBtn.disabled = true;
                
                setTimeout(() => {
                    submitBtn.textContent = getSentText();
                    submitBtn.classList.remove('bg-[#E64530]', 'hover:bg-[#d63c28]');
                    submitBtn.classList.add('bg-green-500', 'hover:bg-green-600');
                    
                    contactForm.reset();
                    
                    setTimeout(() => {
                        submitBtn.textContent = originalText;
                        submitBtn.disabled = false;
                        submitBtn.classList.remove('bg-green-500', 'hover:bg-green-600');
                        submitBtn.classList.add('bg-[#E64530]', 'hover:bg-[#d63c28]');
                    }, 3000);
                }, 2000);
            });
        }

        function getSendingText() {
            const lang = localStorage.getItem('preferredLang') || 'es';
            const texts = {
                'es': 'Enviando...',
                'en': 'Sending...',
                'zh': '发送中...'
            };
            return texts[lang] || 'Sending...';
        }

        function getSentText() {
            const lang = localStorage.getItem('preferredLang') || 'es';
            const texts = {
                'es': '¡Mensaje Enviado!',
                'en': 'Message Sent!',
                'zh': '消息已发送！'
            };
            return texts[lang] || 'Message Sent!';
        }
    });
</script>